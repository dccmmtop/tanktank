<%
name = hit.highlight.name.try(:first) || item.name
%>
<div class="result">
  <div class="title"><%= link_to highlight(name), item %></div>
  <div class="info">
    <span class="url"><%= link_to polymorphic_url(item), item %></span>
    <span class="date" title="Last Updated At"><%= item.updated_at.to_date %></span>
  </div>
</div>


<% content_for :sitemap do %>
  <span class="current"><%= t("admin.menu.keyword")%></span>
<% end %>
<div class="toolbar">
  <form class="form-inline" action="<%= admin_events_path %>">
    <div class="form-group">
      <input type="text" name="q" class="form-control" value="<%= params[:q] %>" placeholder="名称" />
    </div>
    <button class="btn btn-default">搜索</button>
  </form>
</div>
<div class="toolbar">
  <%= link_to '新建关键字', new_admin_keyword_path, class: "btn btn-default" %>
</div>

<table class="table table-bordered table-striped table-condensed">
  <tr class="head">
    <td class="first">#</td>
    <td>名称</td>
    <td>使用次数</td>
    <td>创建人</td>
    <td>创建时间</td>
    <td></td>
  </tr>

<% @keywords.each do |item| %>
  <tr>
    <td class="first"><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.using_count %></td>
    <td><%= item.user.name if item.user_id %></td>
    <td><%= item.created_at.strftime("%Y-%m-%d") %></td>
    <td><%= link_to '', edit_admin_keyword_path(item), class: "fa fa-pencil" %>
    <%= link_to '', admin_keyword_path(item), 'data-confirm' => 'Are you sure?' , method: :delete, class: "fa fa-trash" %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @kyewords %>




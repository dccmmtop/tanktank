
<%= simple_form_for(@friend_request) do |f| %>
  <%= render "/shared/error_messages", target: @friend_request  %>
    <%= f.input :user_id %>
    <%= f.input :content %>
    <div class="form-group">
    <div class="col-md-10 col-sm-offset-2">
      <%= f.submit t("common.save"), class: "btn btn-primary" %> or <%= link_to t("common.cancel"), friend_requests_path %>
    </div>
  </div>
<% end %>
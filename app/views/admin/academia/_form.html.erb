
<%= simple_form_for([:admin, @academium]) do |f| %>
  <%= render "/shared/error_messages", target: @academium  %>
    <fieldset>
    <legend></legend>
    <%= f.input :name %>
    <%= f.input :local %>
    <%= f.input :code %>
    <%= f.input :superior_department %>
    <%= f.input :level %>
    <%= f.input :remark %>
    <%= f.input :website %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :brief %>
    <div class="form-group">
    <div class="col-md-10 col-sm-offset-2">
      <%= f.submit t("common.save"), class: "btn btn-primary" %> 
      <%= link_to t("common.cancel"), admin_academia_path %>

    </div>
  </div>
  </fieldset>
<% end %>
<div class="container">
  <div id="top">
    <nav class="navbar-fixed-top">
      <div class="btn-group btn-group-lg btn-group-justified">
        <%= link_to "按时间",time_more_wechat_nodes_path,class:"btn  btn-default btn-dy1" %>
        <%= link_to "按圈子",circle_more_wechat_nodes_path,class:"btn  btn-dy2" %>
      </div>
    </nav>
  </div>
  <% @nodes.each do |node|%>
  <div class="img-title">
    <a href="<%= node.id %>">
      <div class="text-title">
        <span><b><%= node.name %></b></span>
        <br>
        ——<br>
        <% if node.user_id %>
        <%= User.find_by(id:node.user_id).name%> 
        <% end %>
      </div>
    </a>
  </div>
  <% end %>
</div>

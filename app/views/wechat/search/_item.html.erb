              <%= link_to(truncate(item.title, length: 100), wechat_topic_path(Topic.find_by(title: item.title), uid: current_user.id), title: item.title) %>
            <% else %>
              <%= link_to(truncate(item.title, length: 100), wechat_topic_path(Topic.find_by(title: item.title)), title: item.title) %>
            <% end %>
          </div>
          <div class="info">
            <%= render_node_name(Topic.find_by(title: item.title).node_name,Topic.find_by(title: item.title).node_id) %>
